<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.june.mm</groupId>
  <artifactId>momoplayer</artifactId>
  <name>MoMoPlayer</name>
  <version>2.1.0</version>
  <url>http://blog.csdn.net/junehappylove/article/details/52850828</url>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.tld</include>
          <include>**/*.png</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.judy.Runner</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.sun.jna</groupId>
      <artifactId>examples</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}\\src\\main\\resources\\lib\\examples-1.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.june</groupId>
      <artifactId>jspeex</artifactId>
      <version>0.9.7</version>
      <scope>system</scope>
      <systemPath>${project.basedir}\\src\\main\\resources\\lib\\jspeex-0.9.7.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.june</groupId>
      <artifactId>kj_dsp</artifactId>
      <version>1.1</version>
      <scope>system</scope>
      <systemPath>${project.basedir}\\src\\main\\resources\\lib\\kj_dsp-1.1.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <logging-api>1.1</logging-api>
    <httpclient>3.1</httpclient>
    <ezmorph>1.0.6</ezmorph>
    <lang>2.6</lang>
    <jsoup>1.11.3</jsoup>
    <dom4j>1.6.1</dom4j>
    <beanutils>1.9.3</beanutils>
    <jflac>1.3</jflac>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <codec>1.10</codec>
    <gson>2.2.4</gson>
    <json-lib>2.3</json-lib>
  </properties>
</project>

